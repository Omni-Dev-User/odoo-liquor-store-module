<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="liquor_store_bottle_size_tree" model="ir.ui.view">
        <field name="name">liquor_store.bottle_size.tree</field>
        <field name="model">liquor_store.bottle_size</field>
        <field name="arch" type="xml">
            <tree string="Liquor Store Bottle Size">
                <field name="size"/>               
            </tree>
        </field>
    </record>

    <record id="liquor_store_bottle_size_form" model="ir.ui.view">
        <field name="name">liquor_store.bottle_size.form</field>
        <field name="model">liquor_store.bottle_size</field>
        <field name="arch" type="xml">
            <form string="Liquor Store Bottle_size">
                <sheet>
                    <group>
                        <field name="size"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="liquor_store_bottle_size_action" model="ir.actions.act_window">
        <field name="name">Sizes</field>
        <field name="res_model">liquor_store.bottle_size</field>
        <field name="domain">[]</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No sizes found. Let's create one!
            </p>
            <p>
                Create sizes for your store.
            </p>
        </field>
    </record>

    

</odoo>